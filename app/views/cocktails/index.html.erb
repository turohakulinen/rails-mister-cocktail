<div class="text-center" style="background-color: #F7F7F7; padding: 40px">
  <h1>Cocktails</h1>
  <%= link_to new_cocktail_path, class: "btn btn-primary btn-lg" do %>
    New Cocktail
  <% end %>
</div>

<div class="container-fluid">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <%= render partial: 'shared/card', locals: { cocktail: cocktail } %>
    <% end %>
  </div>
</div>
