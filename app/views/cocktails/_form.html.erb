
<h3>Ingredients</h3>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description + ' of ' + dose.ingredient.name %>
    <%= link_to 'Delete', dose_path(dose), method: :delete, class: "btn btn-danger" %>
  </li>
<% end %>
</ul>

<%= link_to cocktails_path, class: "btn btn-primary" do %>
  Back
<% end %>

<%= simple_form_for(cocktail) do |f| %>
  <%= f.input :name %>
  <%= f.submit "Add a cocktail", class: "btn btn-danger" %>
<% end %>

<%= link_to cocktails_path, class: "btn btn-primary" do %>
  Back
<% end %>

