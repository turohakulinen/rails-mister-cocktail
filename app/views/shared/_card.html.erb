<div class="card col-xs-12" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo, crop: :fill %>');">
  <div class="container-fluid text-center">
    <div class="row">
      <div class="col-xs-12">
        <%= link_to cocktail do %>
          <h2><%= cocktail.name %> </h2>
        <% end %>
      </div>
    </div>
    <div class="row">
      <% cocktail.ingredients.each do |i|%>
        <div class="col-xs-6">
          <h3><%= i.name %></h3>
          <%= cl_image_tag i.photo, crop: :fill, class: "avatar-huge" %>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-6 filler">
      </div>
    </div>
  </div>
</div>
