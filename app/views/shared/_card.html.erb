<div class="card col-xs-12">
  <div class="container-fluid text-center">
    <div class="row">
      <div class="col-xs-12">
        <%= link_to cocktail do %>
          <h2><%= cocktail.name %> </h2>
        <% end %>
      </div>
    </div>
    <div class="row">
      <% cocktail.ingredients.each do |i|%>
        <div class="col-xs-6">
          <h3><%= i.name %></h3>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <%= link_to edit_cocktail_path(cocktail), class: "btn btn-warning" do %>
        Edit
        <% end %>
      </div>
      <div class="col-xs-6">
        <%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
